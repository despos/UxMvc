<!-- Contact -->
<div class="form-group has-feedback" id="large-form-group-contactname">
    <label class="col-sm-2 control-label" for="contactname">Contact name</label>
    <div class="col-sm-8">
        <input type="text" class="form-control"
               id="contactname" name="contactname"
               placeholder="Contact name">
        <span class="block text-info">Can't be empty!</span>
    </div>
</div>

<!-- Address -->
<div class="form-group has-feedback" id="large-form-group-address_street">
    <label class="col-sm-2 control-label" for="address_street">
        Address
        @*<i class="fa fa-asterisk text-warning"></i>*@
    </label>
    <div class="col-sm-6">
        <input type="text" class="form-control"
               id="address_street" name="address.street"
               style="text-transform: capitalize"
               placeholder="Street and number" />
    </div>
    <div class="col-sm-2">
        <input type="text" class="form-control"
               id="address_postalcode" name="address.postalcode"
               placeholder="Zip" />
    </div>
</div>
<div class="form-group has-feedback" id="large-form-group-address_city">
    <label class="col-sm-2 control-label" for="address_city">
        &nbsp;
    </label>
    <div class="col-sm-4">
        <input type="text" class="form-control"
               id="address_city" name="address.city"
               style="text-transform: capitalize"
               placeholder="City" />

    </div>
    <div class="col-sm-2">
        <input type="text" class="form-control"
               id="address_province" name="address.province"
               maxlength="2"
               style="text-transform: uppercase"
               placeholder="Prov" />
    </div>
    <div class="col-sm-2">
        <input type="text" class="form-control"
               id="address_country" name="address.country"
               maxlength="3"
               style="text-transform: uppercase"
               placeholder="ISO3" />
    </div>
</div>
